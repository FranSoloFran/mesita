# entorno
ENV=paper                        # paper | live
POLL_S=0.2

# credenciales
PRIMARY_PAPER_USERNAME=
PRIMARY_PAPER_PASSWORD=
PRIMARY_LIVE_USERNAME=
PRIMARY_LIVE_PASSWORD=

# cuentas
ACCOUNT_PAPER=           # remarkets
ACCOUNT_LIVE=               # live
PROPRIETARY_TAG=PBCP             # o ISV_PBCP

# urls (vacías = auto por env, estan en settings.py)
# PRIMARY_BASE_URL=
# PRIMARY_WS_URL=

# trading
MIN_NOTIONAL_ARS=40000
THRESH_PCT=0.002
COST_BPS=0.0
SLIP_BPS=0.0

# saldos
BALANCE_MODE=risk_poll           # risk_poll | er_reconcile
RISK_POLL_S=0.5
RISK_REFRESH_S=30

# autodiscovery
INSTRUMENT_REFRESH_S=86400       # 1 día

# sync / unwind
WAIT_MS=120
GRACE_MS=800
EDGE_TOL_BPS=1.0
UNWIND_MODE=smart                # smart | always | none

# ui control (paths)
CONTROL_PATH=assets/plots/control.json

# trace
TRACE_ENABLED=false
TRACE_PATH=assets/plots/trace.log
TRACE_ROTATE_MB=20
TRACE_RAW=false
